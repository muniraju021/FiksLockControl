<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FiksLockControl.ResourcesDictonaries">

    <Style TargetType="{x:Type Button}" x:Key="MaterialDesignCustomButton" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
        <Style.Resources>
            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#464646"/>
            <SolidColorBrush x:Key="SecondaryAccentForegroundBrush" Color="#FFFFFF"/>            
        </Style.Resources>
        <Setter Property="Width" Value="120"/>
    </Style>
    
</ResourceDictionary>