             xmlns:ninject="clr-namespace:FiksLockControl.NInject"
             xmlns:viewModels="clr-namespace:FiksLockControl.Model"
             
             StartupUri="Views\LoginView.xaml">
    <Application.Resources>

        <ResourceDictionary>
